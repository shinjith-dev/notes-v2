---
layout: layouts/global.njk
title: Notes
eleventyImport:
  collections: ["note"]
---

<h3 class="text-2xl mb-3 font-semibold">{{ title }}</h3>

<ul class="space-y-1">
{%- for note in collections.note -%}
  <li class="py-1 text-lg">
  {{ loop.index }}. <a class="underline" href="{{ note.url }}">{{ note.data.title }}</a>
  </li>
{%- endfor -%}
</ul>
